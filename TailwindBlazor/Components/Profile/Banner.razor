<Card Extra="items-center w-full h-full p-[16px] bg-cover" Variant="default">
    <div class="relative mt-1 flex h-32 w-full justify-center rounded-xl bg-cover"
         style="background-image: url(@BannerSrc)">
        <div class="absolute -bottom-12 flex h-[87px] w-[87px] items-center justify-center rounded-full border-[4px] border-white bg-pink-400 dark:!border-navy-700">
            <img width="2" height="20" class="h-full w-full rounded-full" src="@AvatarSrc" alt="" />
        </div>
    </div>

    <div class="mt-16 flex flex-col items-center">
        <h4 class="text-xl font-bold text-navy-700 dark:text-white">
            Adela Parkson
        </h4>
        <h5 class="text-base font-normal text-gray-600">Product Manager</h5>
    </div>

    <div class="mb-3 mt-6 flex gap-4 md:!gap-14">
        <div class="flex flex-col items-center justify-center">
            <h4 class="text-2xl font-bold text-navy-700 dark:text-white">
                17
            </h4>
            <p class="text-sm font-normal text-gray-600">Posts</p>
        </div>
        <div class="flex flex-col items-center justify-center">
            <h4 class="text-2xl font-bold text-navy-700 dark:text-white">
                9.7K
            </h4>
            <p class="text-sm font-normal text-gray-600">Followers</p>
        </div>
        <div class="flex flex-col items-center justify-center">
            <h4 class="text-2xl font-bold text-navy-700 dark:text-white">
                434
            </h4>
            <p class="text-sm font-normal text-gray-600">Following</p>
        </div>
    </div>
</Card>

@code {
    private string AvatarSrc = "/img/avatars/avatar11.png";
    private string BannerSrc = "/img/profile/banner.png";
}
